import java.util.Random;

public class LootPool {
	// ===== CONSTANTS =====
	private static final Random RNG = new Random();
	// =====================
	
	// ===== FIELDS =====
	private Map<Supplier<? extends AbstractItem>, Double> probabilities;
	// ==================
	
	// ===== CONSTRUCTORS =====
